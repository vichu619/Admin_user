<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5" style="background-image: url(https://www.google.com/url?sa=i&url=https%3A%2F%2Fimgur.com%2Fgallery%2FC9IFv&psig=AOvVaw08dkxASV_POIQhk3eIf40R&ust=1675149578629000&source=images&cd=vfe&ved=0CBAQjRxqFwoTCMCe-c7g7vwCFQAAAAAdAAAAABAF)">
            <div class="row justify-content-center" >
              <a href="/admin/getusers" style="color:blue" class=" mx-2 mt-2">User Details</a>
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Users</p>

                <form class="mx-1 mx-md-4" action="/admin/adduser" name="myform" method="post" onsubmit=" return validateform()" enctype="application/x-www-form-urlencoded">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="username" id="signname" class="form-control" />
                      <label class="form-label" for="signname">Your Name</label>
                      <p class="text-danger">{{errName}}</p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" name="emailaddress" id="signemail" class="form-control" />
                      <label class="form-label" for="signemail">Your Email</label>
                      <p id="errMsg" class="text-danger" style="display: none;">Email already exists!!</p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" name="password" id="signpw1" class="form-control" />
                      <label class="form-label" for="signpw1">Password</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" name="conpassword" id="signpw2" class="form-control" />
                      <label class="form-label" for="signpw2" required >Repeat your password</label>
                    
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 ">
                    <button  type="submit" value="register" class="btn btn-dark btn-lg">submit</button>
                
                    <p style="color : green">{{added}}</p>
                  </div>

                   
                  </div>


                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                {{!-- <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image"> --}}

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

